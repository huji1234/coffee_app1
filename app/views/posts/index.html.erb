<h2>飲み物リスト</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th>飲み物名</th>
                    <th>感想</th>
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post| %>
                    <tr>
                        <td><%= post.drink %></td>
                        <td><%= post.description %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>















